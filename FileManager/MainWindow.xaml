<Window x:Class="FileManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileManager" 
        xmlns:viewmodel="clr-namespace:FileManager.MVVM.ViewModels"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        mc:Ignorable="d"
        Title="FileManager"
        Height="450" Width="800">

    <Window.DataContext>
        <viewmodel:MainViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBox
            Style="{StaticResource SearchTextBox}" 
            Width="150"
            HorizontalAlignment="Left"
            />

        <ListBox
            Grid.Column="0"
            Grid.Row="1"
            ItemsSource="{Binding ElementsOfDirectory}"
            BorderThickness="0"
            SelectedItem="{Binding Element}"
            Background="Transparent"
            ItemContainerStyle="{StaticResource ListElement}" 
            Margin="10,10,10,7">
            <i:Interaction.Triggers>

                <i:EventTrigger EventName="MouseDoubleClick">
                    <i:InvokeCommandAction 
                        Command="{Binding OpenCommand}"/>
                </i:EventTrigger>

            </i:Interaction.Triggers>
        </ListBox>

        <TextBlock
            Grid.Column="1"
            Grid.Row="1"
            Text="{Binding Info, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            Foreground="Black"
            FontSize="9"
            />
        
        
    </Grid>
</Window>
